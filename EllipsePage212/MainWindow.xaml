<Window x:Class="EllipsePage212.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EllipsePage212"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="230*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Grow" Content="Grow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,9.024,0,0" Click="Grow_Click" Grid.Row="1"/>
        <Button x:Name="Move" Content="Move" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,65,0,0" Click="Move_Click"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="307" VerticalAlignment="Top" Width="394" Margin="121,12,0,0" RenderTransformOrigin="0.5,0.5" Background="#FFDEC4C4" Grid.RowSpan="2">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.164"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>

    </Grid>
</Window>
